<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs')%>
    <link rel="stylesheet" href="/css/login.css">
    <script src="/js/loginValidations.js" defer></script>
    <title>Iniciar Sesión</title>
</head>

<body>
    <!--header-->
    <%- include('../partials/headerMinimalista.ejs')%>

    <!--main-->
    <div class="fondo">
        <main class="main">
        <section class="titulo">
            <h1 class="titulo__text">Iniciar sesión</h1>
        </section>
        <section class="formulario__box">
            <section class="formulario__container">
            <form class="formulario" action="/user/login" method="POST">
                <div class="formulario__item">
                    <label class="formulario__label" for="email">Email:</label>
                    <input class="formulario__input <%= locals.errors && errors.email ? 'invalid' : null %>" type="text" id="email" name="email" value="<%= locals.oldData ? oldData.email : null %>" placeholder="email@oracula.com">
                    <i class="fa-solid fa-circle-check input--icon icon--valid hidden" id="iconValidEmail"></i>
                    <i class="fa-solid fa-circle-exclamation input--icon icon--invalid hidden" id="iconInvalidEmail"></i>  
                    <p class="formulario__error" id="errorEmail">
                        <%= (locals.errors && errors.email)? errors.email.msg : "" %>
                        <%= (locals.errors && errors.password)? errors.password.msg : "" %> 
                    </p>
                </div>
                <div class="formulario__item">
                    <label class="formulario__label" for="password">Contraseña:</label>
                    <input class="formulario__input <%= locals.errors && errors.password ? 'invalid' : null %>" type="password" id="password" name="password">
                    <i class="fa-solid fa-circle-check input--icon icon--valid hidden" id="iconValidPassword"></i>
                    <i class="fa-solid fa-circle-exclamation input--icon icon--invalid hidden" id="iconInvalidPassword"></i>  
                    <p class="formulario__error" id="errorPassword"></p>
                </div>
                <div class="recordar-password">
                <label class="recordar-password__label" for="recordarPassword"> Recordame
                    <input class="recordar-password__checkbox" type="checkbox" name="recordarPassword" id="recordarPassword">
                    </button>
                </label>
                </div>
                <div class="formulario__submit">
                <div>
                    <p class="label--secondary">¿Te olvidaste tu contraseña? <a class="formulario__link" href="">Recuperala acá.</a></p>
                    <p class="label--secondary">¿No tenés cuenta? <a class="formulario__link" href="/user/signup">Creala acá.</a></p>
                </div>
                <button type="submit">
                    <i class="fa-solid fa-circle-arrow-right formulario__icon-submit"></i>
                </button>
                </div>
            </form>
            </section>
        </section>
        </main>
        <!--footer-->
        <%-//include('../partials/footer.ejs')%>
    </div>
</body>

</html>